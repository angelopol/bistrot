                })
                .then(res => res.json())
                .then(data => {
                    if (data.status === 'success') {
                        alert('Reserva eliminada');
                        window.location.reload();
                    } else {
                        alert('Error al eliminar la reserva');
                    }
                })
                console.log("pues nose"); */
            } else {
                alert('Seleccione una reserva para eliminar');
            }
        });

    </script>
</body>
</html>


