<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mesas</title>
    <link rel="stylesheet" href="mesas.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap">
    <link rel="stylesheet" href="reservacion.css">

</head>
<body>
    <div class="heading">
        <div class="titulo">
            <h1>BISTROT CHEZ RÉMY</h1>
        </div>
        <div class="usuario">
            <select name="usuario" id="usuario">
                <option value="gerente0000">gerente0000</option>
                <option value="gerente0001">gerente0001</option>
            </select>
        </div>
    </div>
    <div class="pagina">
        <div class="sidebar">
            <nav>
                <ul>
                    <li><a href="#"><img src="imagenes/icono_inicio.png" alt="Inicio">Inicio</a></li>
                    <li><a href="#"><img src="imagenes/icono_ventas.png" alt="Ventas/Salón">Ventas/Salón</a></li>
                    <li><a href="#"><img src="imagenes/icono_compras.png" alt="Compras">Compras</a></li>
                    <li><a href="#"><img src="imagenes/icono_rrhh.png" alt="RRHH">RRHH</a></li>
                    <li><a href="#"><img src="imagenes/icono_inventario.png" alt="Inventario">Inventario</a></li>
                    <li><a href="#"><img src="imagenes/icono_mantenimiento.png" alt="Mantenimiento">Mantenimiento</a></li>
                    <li><a href="#"><img src="imagenes/icono_cocina.png" alt="Cocina/Bar">Cocina/Bar</a></li>
                    <li><a href="#"><img src="imagenes/icono_reservas.png" alt="Reservas">Reservas</a></li>
                    <li><a href="#"><img src="imagenes/icono_reporte.png" alt="Reportes">Reportes</a></li>
                    <li><a href="#"><img src="imagenes/icono_config.png" alt="Configuraciones">Configuraciones</a></li>
                    <li><a href="#"><img src="imagenes/icono_ayuda.png" alt="Ayuda">Ayuda</a></li>
                </ul>
            </nav>
        </div>
        <div class="contenido">
            <div class="contenidop">
                <div class="Reservaciones">
                   <h2><img src="imagenes/icono_salida.png" alt="regresar">Reservar</h2>
                </div>
                <main>
                    <div class="left-side">

                <table>
                <thead>
                    <tr>
                        <th>Nombre completo</th>
                        <th>Cédula</th>
                        <th>Fecha</th>
                        <th>Hora</th>
                        <th>Ubicación</th>
                        <th></th>
                        </tr>
                    <tr>
                        
                      </tr>

                </thead>

                <tbody>
                    <% if (data) { %>
                        <% for (var i = 0; i < data.length; i++) { %>
                            <tr>
                                <td><%= data[i].nombre %></td>
                                <td><%= data[i].ID_cliente %></td>
                                <td><%= data[i].fecha %></td>
                                <td><%= data[i].hora_inicio %></td>
                                <td><%= data[i].Ubicacion %></td>
                            </tr>
                        <% } %>
                    <% } %>

                </tbody>
                  

                  
                </table>





                    </div>
                        
                    <div class="right-side">
                        <ul>
                            <li><button class="btn-list mesas">Mesas</button></li>
                            <li><button class="btn-list bar">Barra</button></li>
                            <li><button class="btn-list reserva">Crear Reserva</button></li>
                            <li><button class="btn-list delete-reserv">Eliminar Reserva</button></li>
                            <li><button class="btn-list confirm-reserv">confirmar reserva</button></li>
                            <li><button class="btn-list modify-reserv">modificar Reserva</button></li>
                        </ul>
                    </div>
                </main>
            </div>
        </div>
    </div>
    <script>
        let botonMesas = document.querySelector('.btn-list.mesas');
        let botonBar = document.querySelector('.btn-list.bar');
        let botonReserva = document.querySelector('.btn-list.reserva');
        let botonEvento = document.querySelector('.btn-list.evento');
        let botonEliminarReserva = document.querySelector('.btn-list.delete-reserv');
        let botonModificar = document.querySelector('.btn-list confirm-reserv');  

        botonMesas.addEventListener('click', () => {
            window.location.href = '/mesas'; // Cambia a la ruta del servidor
        });

        botonBar.addEventListener('click', () => {
            window.location.href = '/bar'; // Cambia a la ruta del servidor
        });

        botonReserva.addEventListener('click', () => {
            window.location.href = '/CrearReservas'; // Cambia a la ruta del servidor
        });

        botonEliminarReserva.addEventListener('click', () => {
            window.location.href = '/reservas/eliminar'; // Cambia a la ruta del servidor
        });

        botonModificar.addEventListener('click', () => {
            window.location.href = '/reservas/modificar'; // Cambia a la ruta del servidor
        });


        
    </script>
</body>
</html>


