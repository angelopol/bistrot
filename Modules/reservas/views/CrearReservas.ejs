<form action="reservaciones/crear" method="POST">
  <div class="form-group">
    <label for="fecha">Fecha:</label>
    <input type="date" id="fecha" name="fecha" required>
  </div>

  <div class="form-group">
    <label for="personas">Cantidad de personas:</label>
    <input type="number" id="personas" name="personas" required>
  </div>

  <div class="form-group">
    <label for="hora">Hora de inicio:</label>
    <input type="time" id="hora" name="hora_inicio" required>
  </div>

  <div class="form-group">
    <label for="hora">Hora de finalizacion:</label>
    <input type="time" id="hora" name="hora_fin" required>
  </div>

  <div class="form-group">
    <label for="nombre">Nombre:</label>
    <input type="text" id="nombre" name="nombre" required>
  </div>

  <div class="form-group">
    <label for="apellido">Apellido:</label>
    <input type="text" id="apellido" name="apellido" required>
  </div>

  <div class="form-group">
    <label for="cedula">Cédula de Identidad:</label>
    <input type="text" id="cedula" name="cedula" required>
  </div>

  <div class="form-group">
    <label for="idmesa">Número de mesa:</label>
    <input type="text" id="idmesa" name="idmesa" required>
  </div>

  <div class="form-group">
    <label for="idtelefono">telefono:</label>
    <input type="text" id="idtelefono" name="idtelefono" required>
  </div>

  <div class="form-group">
    <label for="descripcion">descripcion</label>
    <input type="text" id="iddescripcion" name="iddescripcion" required>
  </div>


  <button type="submit">Registrar Reserva</button>
</form>

                    
